
<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
</head>
<body>

<div class = "container">
    <div class = "row">
        <div class ="col-xs-3">
            <h2>User info</h2>
            <%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %><br>
            <table class = table>
                <tbody>
                    <tr>
                       <th>name</th>
                       <th><%= user.name %></th>
                    </tr>
                    <tr>
                       <th>introduction</th>
                       <th><%= user.introduction %></th>
                    </tr>
                    <tr>
                       <th>Follows</th><th><%= link_to user_follow_path(user) do %><%= user.followings.count %></th>
                       <% end %>
                    </tr>
                    <tr>
                       <th>Followers</th><th><%= link_to user_follower_path(user) do %><%= user.followed.count %></th>
                       <% end %>
                    </tr>
                    <tr>
                      <th><%= render 'users/follow_btn', user: user %></th>
                    </tr>
                </tbody>
            </table>

    <div class = "row">
        <%= link_to edit_user_path(current_user) do %>
          <div class="btn btn-default col-xs-12 glyphicon glyphicon-wrench"></div>
          <% end %>
    </div>

    <h1>New book</h1>
        <div class ="field row">

               <%= form_for(@book_new) do |f| %>

               <h4>Title</h4>
                     <%= f.text_field :title , class: "col-xs-12"%></div>

        <div class ="field row form-group">
                <h4>Opinion</h4>
                     <%= f.text_area :body, class: "col-xs-12" %></div>

        <div class ="action row">
                <%= f.submit 'Create Book', class: "btn btn-primary col-xs-12 form-control" %></div>


                <% end %>
            </div>

        </div>
    </div>
</div>


</html>



